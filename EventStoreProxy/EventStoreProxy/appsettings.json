{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Yarp": "Warning",
        "Microsoft.AspNetCore.DataProtection": "Error"
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "web": {
        "ClusterId": "backend",
        "Match": {
          "Path": "/web/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuth",
        "Transforms": [
          { "RequestHeaderRemove": "Authorization" },
          { "RequestHeaderRemove": "Cookie" },
          {
            "ResponseHeader": "Set-Cookie",
            "Append": "es-creds=%7B%22credentials%22%3A%22dW5rbm93bjoK%22%7D; Path=/web",
            "When": "Always"
          }
        ]
      },
      "catchAll": {
        "ClusterId": "backend",
        "Match": {
          "Path": "{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuth",
        "Transforms": [
          { "RequestHeaderRemove": "Authorization" }
        ]
      }
    }
  }
}
